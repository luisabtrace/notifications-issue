{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,
    "outDir": "../dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../types/**/*.d.ts",
    "../shared/**/*.ts",
    "../../jest-setup.ts"
  ]
}
